# Truth Matters Store Environment Variables

# Brand Configuration
NEXT_PUBLIC_BRAND_NAME="Truth Matters"
NEXT_PUBLIC_SITE_URL="https://truth-matters-store.com"
NEXT_PUBLIC_BRAND_PRIMARY="#0B1220"
NEXT_PUBLIC_BRAND_ACCENT="#C41E3A"

# Shopify Configuration (Production)
SHOPIFY_STORE_DOMAIN="your-store.myshopify.com"
SHOPIFY_STOREFRONT_ACCESS_TOKEN="your-storefront-access-token"
SHOPIFY_ADMIN_ACCESS_TOKEN="your-admin-access-token"

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# Email/Newsletter (Resend)
RESEND_API_KEY="re_your-resend-api-key"
NEXT_PUBLIC_NEWSLETTER_SIGNUP_ENDPOINT="/api/newsletter/signup"

# Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID="your-vercel-analytics-id"
NEXT_PUBLIC_POSTHOG_KEY="phc_your-posthog-key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# SMS/Marketing (Optional - Klaviyo)
KLAVIYO_API_KEY="pk_your-klaviyo-private-key"
NEXT_PUBLIC_KLAVIYO_SITE_ID="your-klaviyo-site-id"

# Content/CMS (Optional)
CONTENTFUL_SPACE_ID="your-contentful-space-id"
CONTENTFUL_ACCESS_TOKEN="your-contentful-access-token"

# Authentication (Optional - for admin/customer accounts)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# Development/Testing
NODE_ENV="development"
NEXT_PUBLIC_APP_ENV="development"

# Support/Mission Configuration
NEXT_PUBLIC_SUPPORT_PLEDGE_BLURB="Supporting those who serve our communities and defend our freedoms"
NEXT_PUBLIC_DONATION_PARTNERS="Wounded Warrior Project,Tunnel to Towers Foundation,First Responder Trauma Counselors"

# Feature Flags
NEXT_PUBLIC_ENABLE_SUBSCRIPTIONS="true"
NEXT_PUBLIC_ENABLE_REVIEWS="true"
NEXT_PUBLIC_ENABLE_WISHLIST="false"
NEXT_PUBLIC_ENABLE_LIVE_CHAT="false"